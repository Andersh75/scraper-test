{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parser": "babel-eslint",
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 120,
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": false
      }
    ],
    "no-unused-vars": "off",
    "no-console": "off"
  },
  "globals": {
    "firebase": false,
    "console": false,
    "customElements": false,
    "CustomEvent": false,
    "require": false,
    "process": false
  }
}
